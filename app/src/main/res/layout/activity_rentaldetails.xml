                        android:layout_height="200dp"
                        android:background="#000000">

                        <TextView
                            android:layout_width="385dp"
                            android:layout_height="267dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"

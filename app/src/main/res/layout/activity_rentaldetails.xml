                        android:layout_height="331dp"
                        app:cardBackgroundColor="#070404"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="16dp">

                        <LinearLayout
                            android:layout_width="379dp"
                            android:layout_height="319dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="90"
                                    android:fontFamily="@font/calibri"
                                    android:text="Machine Name"
                                    android:textColor="#F8F5F5"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="10"
                                    android:background="@drawable/light_orange_rounded_shape"
                                    android:drawableLeft="@drawable/ic_star_yellow_24dp"
                                    android:fontFamily="@font/calibri"
                                    android:padding="6dp"
                                    android:text="4.5"
                                    android:textAlignment="textEnd"
                                    android:textColor="#ffc32d"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageviewMAchine"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_marginBottom="8dp"
                                android:background="#000000"
                                android:scaleType="centerCrop" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="100">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/calibri"
                                    android:text="â‚¹ 600"
                                    android:textColor="#F1AA19"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="69dp"
                                    android:layout_height="22dp"
                                    android:layout_alignEnd="@+id/textView"
                                    android:layout_alignRight="@id/textView"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginEnd="-76dp"
                                    android:layout_marginRight="-76dp"
                                    android:fontFamily="@font/calibri"
                                    android:text="per hour"
                                    android:textColor="#F1AA19"
                                    android:textSize="14sp" />

                            </RelativeLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
